#include <pthread.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#define MAX 10000000
int cnt = 0;

void *thread_function(void *arg) {
  for (int i = 0; i < MAX; i++) {
    cnt += 1;
  }
  return NULL;
}

int main(void) {
  pthread_t thread_id;
  pthread_create(&thread_id, NULL, thread_function, NULL);
  void *ans;
  pthread_join(thread_id, &ans);
  long long len = (long long)ans;
  printf("Done: answer is %lld. \n", len);
}
